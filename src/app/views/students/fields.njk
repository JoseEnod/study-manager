<div class="item">
  <div>Avatar</div>
  <div><input type="URL" name="avatar_url" placeholder="URL ex: https://..." value="{{student.avatar_url}}"></div>
</div>

<div class="item">
  <div>Nome</div>
  <div><input type="text" name="name" placeholder="Seu nome" value="{{student.name}}"></div>
</div>

<div class="item">
  <div>Email</div>
  <div><input type="email" name="email" placeholder="Seu email" value="{{student.email}}"></div>
</div>

<div class="item">
  <div>Data de aniversario</div>
  <div><input type="date" name="birth" value="{{student.birth}}"></div>
</div>

<div class="item">
  <div>Serie que cursa</div>
  <div>
    <select name="school_grade">
      <option value="5EF" {%if student.school_grade == "5EF"%} selected="selected" {%endif%}>5º Ano do Ensino Fundamental</option>
      <option value="6EF" {%if student.school_grade == "6EF"%} selected="selected" {%endif%}>6º Ano do Ensino Fundamental</option>
      <option value="7EF" {%if student.school_grade == "7EF"%} selected="selected" {%endif%}>7º Ano do Ensino Fundamental</option>
      <option value="8EF" {%if student.school_grade == "8EF"%} selected="selected" {%endif%}>8º Ano do Ensino Fundamental</option>
      <option value="9EF" {%if student.school_grade == "9EF"%} selected="selected" {%endif%}>9º Ano do Ensino Fundamental</option>
      <option value="1EM" {%if student.school_grade == "1EM"%} selected="selected" {%endif%}>1º Ano do Ensino Medio</option>
      <option value="2EM" {%if student.school_grade == "2EM"%} selected="selected" {%endif%}>2º Ano do Ensino Medio</option>
      <option value="3EM" {%if student.school_grade == "3EM"%} selected="selected" {%endif%}>3º Ano do Ensino Medio</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Carga horária semanal</div>
  <div><input type="number" name="hours" placeholder="Quantidade de horas por semana" value="{{student.hours}}"></div>
</div>

<div class="item">
  <div>Serie que cursa</div>
  <div>
    <select name="teacher_id">
      {%for teacher in teacherOptions%}
      <option value="{{teacher.id}}" {%if student.teacher_id == teacher.id%} selected="selected" {%endif%}>
        {{teacher.name}}
        </option>
      {%endfor%}
    </select>
  </div>
</div>

<button type="submit">Salvar</button>